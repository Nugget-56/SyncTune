<div class="login-connect-container">
  <div class="box-1">
    <div class="login-container">
      <div class="login-title">Log in</div>
      <form id="login-form" action="/login" method="post">
        <div class="input-text">
          <input type="email" name="email" id="email" autocomplete="email" required>
          <span></span>
          <label for="email">Email</label>
        </div>
        <div class="input-text">
          <input type="password" name="password" id="password" required>
          <span></span>
          <label for="password">Password</label>
        </div>
        <button type="submit" id="login-button">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75"></path>
          </svg>
          <div class="login-button-text">
            Login
          </div>
        </button>
      </form>
      <div id="forgot">
        Forgot password?
      </div>
    </div>
    <div class="login-toggle-container">
      <button type="button" id="login-toggle"> </button>
    </div>
  </div>
  <div>
    Or
  </div>
  <div class="box-2">
    <div class="register-container">
      <div class="login-title">Register</div>
      <form id="register-form" action="/register" method="post">
        <div class="input-text">
          <input type="username" name="username" id="username" autocomplete="username" required>
          <span></span>
          <label for="username">Username</label>
        </div>
        <div class="input-text">
          <input type="email" name="email" id="email" autocomplete="email" equired> 
          <span></span>
          <label for="email">Email</label>
        </div>
        <div class="input-text">
          <input type="password" name="password" id="password" minlength="8" required>
          <span></span>
          <label for="password">Password</label>
        </div>
        <button type="submit" id="register-button">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75"></path>
          </svg>
          <div class="login-button-text">
            Register
          </div>
        </button>
      </form>
    </div>
    <div class="register-toggle-container">
      <button type="button" id="register-toggle"> </button>
    </div>
  </div>
</div>
